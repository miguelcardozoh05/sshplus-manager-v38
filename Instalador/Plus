# FunciÃ³n para instalar scripts desde GitHub
install_scripts () {
    # Crear directorios necesarios
    mkdir -p /bin
    mkdir -p /etc/SSHPlus
    
    # Descargar repositorio completo si no existe
    if [[ ! -d "/tmp/sshplus-manager-v38" ]]; then
        cd /tmp
        rm -rf sshplus-manager-v38* > /dev/null 2>&1
        wget -q "https://github.com/miguelcardozoh05/sshplus-manager-v38/archive/refs/heads/main.zip" -O sshplus.zip
        unzip -q sshplus.zip
        mv sshplus-manager-v38-main sshplus-manager-v38
    fi
    
    # Copiar scripts principales
    if [[ -d "/tmp/sshplus-manager-v38/Arquivos" ]]; then
        cp -r /tmp/sshplus-manager-v38/Arquivos/* /bin/
        cp -r /tmp/sshplus-manager-v38/Herramientas/* /bin/
        chmod +x /bin/*
        
        # Crear enlaces simbÃ³licos para comandos principales
        ln -sf /bin/menu /usr/bin/menu > /dev/null 2>&1
        ln -sf /bin/criarusuario /usr/bin/criarusuario > /dev/null 2>&1
        ln -sf /bin/sshmonitor /usr/bin/sshmonitor > /dev/null 2>&1
        ln -sf /bin/speedtest /usr/bin/speedtest > /dev/null 2>&1
        ln -sf /bin/botssh /usr/bin/botssh > /dev/null 2>&1
        
        # Limpiar archivos temporales
        rm -rf /tmp/sshplus-manager-v38* /tmp/sshplus.zip > /dev/null 2>&1
    fi
}

fun_bar 'install_scripts'
clear
echo ""
